@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="form-group">
        <label for="email">Phone Number</label>
        <input type="number" class="form-control" placeholder="Enter Phone Number" id="txtLoginPhoneNumber">

        <label for="password">Password</label>
        <input type="password" class="form-control" placeholder="Enter Password" id="txtLoginPassword">
    </div>
    <button type="button" id="btnUserLogin" class="btn btn-primary">Login</button>
    <div id="UserloginErrMsgDiv" class="alert alert-danger collapse">
        <a id="UserloginLinkClose" class="close" href="#">&times;</a>
        <div id="UserloginErrTxt"></div>
    </div>
</div>

