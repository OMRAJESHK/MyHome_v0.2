
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-3">
    <div class="row justify-content-sm-center">
        <div class="col-sm-10 col-md-8">
            <div class="card border-info">
                <div class="card-header">Sign in to continue</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="https://placeimg.com/128/128/tech/sepia">
                            <div class="text-center h5">Expense Calculator</div>
                        </div>
                        <div class="col-md-8">
                            <form class="form-signin">
                                <input type="email" class="form-control mb-2" placeholder="Enter email" id="txtLoginEmail" required autofocus>

                                <input type="password" class="form-control mb-2" placeholder="Enter Password" id="txtLoginPassword" required>

                                <button type="button" id="btnLogin" class="btn btn-lg btn-primary btn-block mb-1">Sign in</button>
                                <label class="checkbox float-left"> <input type="checkbox" value="remember-me"> Remember me </label>
                                <a href="#" class="float-right">Need help?</a>
                            </form>
                            <div id="UserloginErrMsgDiv" class="alert alert-danger collapse">
                                <a id="UserloginLinkClose" class="close" href="#">&times;</a>
                                <div id="UserloginErrTxt"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="#" class="float-right">Create an account </a>
        </div>
    </div>
</div>