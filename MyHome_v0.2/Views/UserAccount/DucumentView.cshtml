@{
    Layout = null;
}
<div class="container-fluid p-4">
    <div class="row">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header global-bg-primary">
                    <div class="d-flex justify-content-between mb-1">
                        <div class="h4 font-weight-bold">Documents</div>
                        <button class="btn global-bg-primary" onclick="gotoSaveDocument()"hidden id="btnAddDocument">Add New</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row" id="DocumentList"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header global-bg-primary">
                    <div class="d-flex justify-content-between mb-1">
                        <div class="h4 font-weight-bold"><i class="fas fa-image fontSize_18 mr-2" aria-hidden="true"></i>Preview</div>
                    </div>
                </div>
                <div class="card-body" style="height: 500px; overflow-y: scroll;" id="DocContainer">
                    <div class="col-sm-12 col-md-12 col-xl-12 text-center">
                        <img class="img-fluid w-100" src="" id="documentView" />
                        @*<div class="card-img-overlay text-white d-flex justify-content-center align-items-end">
                            <p>More sheep.</p>
                        </div>*@
                        <span id="NoDoc_Text"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a class="btn global-bg-primary disabled" id="downloadDoc">
                            Download
                        </a>
                    </div>
                </div>
            </div>    
        </div>
    </div>
</div>