@{
    Layout = null;
}
<div class="container-fluid mt-1">
    <div class="row">
        <div class="col-lg-4">
            <form onsubmit="saveReminderDetails(); return false">
                <div class="card card-outline-secondary shadow mb-3">
                    <div class="card-header global-bg-primary">
                        <h3 class="mb-0 text-light">Set Reminder</h3>
                    </div>
                    <div class="card-body p-2">
                        <div autocomplete="off" class="form" role="form">
                            <div class="form-group">
                                <label for="inputReminderType">Reminder Type</label>
                                <select class="form-control minWidthFull txtRounded" id="ddlReminderType" required></select>
                            </div>
                            <div class="form-group">
                                <label for="" class="font-weight-bold">Description</label>
                                <input class="form-control minWidthFull txtRounded" id="txtDescription" placeholder="Description..." type="text" required>
                            </div>
                            <div class="form-group">
                                <label for="" class="font-weight-bold">Set Time</label>
                                <input class="form-control minWidthFull txtRounded" id="txtSetTime" placeholder="Set Time..." type="text" required>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-2">
                        <div class="form-group">
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-clear w-25" onclick="clearTextBoxes()"><i class="fas fa-broom"></i> Clear</button>
                                <button class="btn btn-success w-25" type="submit">Save <i class="fas fa-share"></i> </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col-lg-8">
            <div class="card card-outline-secondary shadow mb-3" style="height: 408px;">
                <div class="card-header global-bg-primary">
                    <h3 class="mb-0 text-light">View Events</h3>
                </div>
                <div class="card-body p-2">
                    <div autocomplete="off" class="form table-responsive" role="form">
                        <table class="table table table-bordered table-hover table-striped" id="tblSetReminder">
                            <thead>
                                <tr class="global-text-primary tablelight">
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Set Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
