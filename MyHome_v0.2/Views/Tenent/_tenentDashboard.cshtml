<div class="section__content">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-header global-text-primary">
                <div class="d-flex bd-highlight">
                    <div class="display-6 p-2 flex-grow-1 text-center h4">WELCOME TO DASHBOARD</div>
                    <div><label>since <span id="spentYr"></span> Year <span id="spentMonth"></span> Month</label></div>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex bd-highlight" style="flex-wrap: wrap;">
                    <div class="p-2 flex-fill bd-highlight ">
                        <div class="form-group">
                            <div class="d-flex">
                                <div class="mt-2"><i class="fa fa-user-circle fontSize_50 global-text-primary"></i></div>
                                <div class="ml-2">
                                    <label for="inputEmail" class="h3 font-weight-bold mt-2 fontSize_16">Resident Name</label>
                                    <div id="TenantName" class="fontSize_13 "></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="p-2 flex-fill bd-highlight ">
                        <div class="form-group">
                            <div class="d-flex">
                                <div class="mt-3"><i class="fas fa-money-bill-wave fontSize_50 global-text-primary"></i></div>
                                <div class="ml-2">
                                    <label for="inputEmail" class="font-weight-bold mt-2 fontSize_16">Advance Amount</label>
                                    <div id="AdvAmt" class="fontSize_13 "></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="p-2 flex-fill bd-highlight">
                        <div class="form-group">
                            <div class="d-flex">
                                <div class="mt-3 mr-2"><i class="fas fa-calendar-alt fontSize_50 global-text-primary"></i></div>
                                <div class="ml-2">
                                    <label for="inputEmail" class="font-weight-bold mt-2 fontSize_16">Joining Date</label>
                                    <div id="joinDate" class="fontSize_13 "></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

