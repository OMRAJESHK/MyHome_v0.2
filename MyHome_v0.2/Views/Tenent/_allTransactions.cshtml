@{
    Layout = null;
}
<div class="container-fluid">
    <div class="d-flex justify-content-between mb-1">
         <h5 class="h2">All Transactions</h5>
    </div>
    <div class="row mb-1">
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text global-bg-primary">Request in</span>
                </div>
                <select class="form-control" id="ddlTransactionChange" name="Request" onchange="Transactionsearch(this.value)">
                    <option value="0">Today</option>
                    <option value="1">This Weekly</option>
                    <option value="2">This Month</option>
                    <option value="3">This Year</option>
                    <option value="4">Between Dates</option>
                </select>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text global-bg-primary">From</span>
                </div>
                <input type="text" class="form-control" placeholder="" id="trnFrom">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text global-bg-primary">To</span>
                </div>
                <input type="text" class="form-control" placeholder="" id="trnTo">
            </div>
        </div>
        <div class="col-lg-1">
            <input type="button" class="btn global-bg-primary" onclick="transactionCall()" value="GET" />
        </div>
        <div class="col-lg-2">
            <button class="btn global-bg-primary" id="btnAddTransactions" onclick="GotoSaveTransaction()">Add New</button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table table-bordered table-hover" id="tblTransactions">
                <thead >
                    <tr class="global-bg-primary ">
                        <th>Description</th>
                        <th>Transaction Type</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Transaction Mode</th>
                        <th>Paid By</th>
                        <th>Paid To</th>
                        <th>Status</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    </div>
