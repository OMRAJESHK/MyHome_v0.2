@{
    Layout = null;
}
<div class="container-fluid">
    <div class="d-flex justify-content-between mb-1">
         <h5 class="h2">All Transactions</h5>
    </div>
    <div class="row mb-1">
        <div class="col-lg-3 zi-1">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text global-bg-primary">Search By</span>
                </div>
                <select class="form-control" id="ddlTransactionChange" name="Request" onchange="Transactionsearch(this.value)">
                    <option value="0">Today</option>
                    <option value="1">This Weekly</option>
                    <option value="2">This Month</option>
                    <option value="3">This Year</option>
                    <option value="4">Between Dates</option>
                </select>
            </div>
        </div>
        <div class="col-lg-3 zi-1 betweenDatesSection">
            <div class="input-group">
                <div class="input-group-prepend"><span class="input-group-text global-bg-primary" style="width: 100px;">From</span></div>
                <input type="text" class="form-control" placeholder="" id="trnFrom">
            </div>
        </div>
        <div class="col-lg-3 zi-1 betweenDatesSection">
            <div class="input-group">
                <div class="input-group-prepend"><span class="input-group-text global-bg-primary" style="width: 100px;">To</span></div>
                <input type="text" class="form-control" placeholder="" id="trnTo">
            </div>
        </div>
        <div class="col-lg-1" title="Get">
            <div style="display:flex" >
                <span class="betweenDatesSection mr-2">
                    <button class="btn bg-info text-light" onclick="betweenDatesTrns()">
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                    </button>
                </span>
                <span class="zi-1" title="Add New">
                    <button class="btn bg-success text-light" id="btnAddTransactions" onclick="GotoSaveTransaction()">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                    </button>
                </span>          
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 zi-0 table-responsive">
            <table class="table table table-bordered table-hover table-striped" id="tblTransactions">
                <thead></thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
