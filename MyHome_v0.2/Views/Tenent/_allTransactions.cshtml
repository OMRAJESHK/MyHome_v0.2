@{
    Layout = null;
}
<div class="container-fluid">
    <div class="d-flex justify-content-between mb-1">
         <h5 class="h2">All Transactions</h5>
         
    </div>
    <div class="row mb-1">
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Request in</span>
                </div>
                <select class="form-control" id="ddlRequest" name="Request">
                    <option>Today</option>
                    <option>This Weekly</option>
                    <option>This Month</option>
                    <option>This Year</option>
                    <option>Between Dates</option>
                </select>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">From</span>
                </div>
                <input type="text" class="form-control" placeholder="" id="trnFrom">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">To</span>
                </div>
                <input type="text" class="form-control" placeholder="" id="trnTo">
            </div>
        </div>
        <div class="col-lg-1">
            <input type="button" class="btn btn-primary" onclick="transactionCall()" value="Search" />
        </div>
        <div class="col-lg-2">
            <button class="btn btn-primary" id="btnAddTransactions" onclick="GotoSaveTransaction()">Add New</button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table table-bordered table-hover" id="tblTransactions">
                <thead class="thead-dark">
                    <tr>
                        <th>Description</th>
                        <th>Transaction Type</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Transaction Mode</th>
                        <th>Paid By</th>
                        <th>Paid To</th>
                        <th>Status</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    </div>
