    Layout = null;
}
<div class="container-fluid">
    <div class="row mb-1">
        <div class="col-lg-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Transaction in</span>
                </div>
                <select class="form-control" id="ddlTransactions" name="Transactions">
                    <option>Today</option>
                    <option>This Weekly</option>
                    <option>This Month</option>
