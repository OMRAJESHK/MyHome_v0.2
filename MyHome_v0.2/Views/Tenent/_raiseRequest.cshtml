
@{
    Layout = null;
}
<div class="container-fluid mt-2">
        <div class="row mb-1">
            <div class="offset-lg-3 col-lg-4 border p-2" >
                <div class="card">
                    <div class="card-header text-left global-bg-primary">
                        <div class="account-item clearfix js-item-menu">
                            <div class="image">
                                <img src="~/Images/Profile.jpg" class="img-thumbnail rounded-circle global-text-primary" alt="John Doe" style="border:1px solid;" />
                            </div>
                            <div class="content">
                                <p class="font-weight-bold">Owner</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" id="divChatBody"style="height: 530px;overflow-y: scroll;"></div>
                    <div class="card-footer text-muted">
                        <div style="display:flex;">
                            <input class="form-control minWidthFull" id="txtRequestBody" placeholder="Request Body..." style="flex:1;min-width: 85%;" />
                            <button class="btn btn-info ml-1" type="button" onclick="saveRequest()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<script>
     $(document).find("div#RenderContent #divChatBody").scroll(function () {
        var scrollValue = $(this).scrollTop();
         if (scrollValue == 0) {
             $(document).find("div#RenderContent #divLoadMore").removeClass('d-none');
         }
    });
</script>
