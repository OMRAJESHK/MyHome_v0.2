@{
    Layout = null;
}
<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between mb-1">
        <h5 class="h2">Home Aminities</h5>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary"><h3 class="mb-0 text-light">Primary</h3></div>
                <div class="card-body">
                    <div autocomplete="off" class="form" role="form">
                        <div class="form-group">
                            <label for="inputNumberOfDoors" class="font-weight-bold">Number Of Doors</label>
                            <label for="inputNumberOfDoors" class="font-weight-bold float-right" id="lblNumberofDoors"></label>
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfWindows" class="font-weight-bold">Number Of Windows</label>
                            <label for="inputNumberOfWindows" class="font-weight-bold float-right" id="lblNumberofWindows"></label>
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfTaps" class="font-weight-bold">Number Of Taps</label>
                            <label for="inputNumberOfTaps" class="font-weight-bold float-right" id="lblNumberofTaps"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary"><h3 class="mb-0 text-light">Secondary</h3></div>
                <div class="card-body">
                    <div class="form">
                        <div class="form-group">
                            <label for="inputNumberOfBulbs" class="font-weight-bold">Number Of Bulbs</label>
                            <label for="inputNumberOfBulbs" class="font-weight-bold float-right" id="lblNumberofBulbs"></label>
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfBulbs" class="font-weight-bold">Number Of Fans</label>
                            <label for="inputNumberOfBulbs" class="font-weight-bold float-right" id="lblNumberofFans"></label>
                        </div>  
                        <div class="form-group">
                            <label for="inputAddress" class="font-weight-bold">Address</label>
                            <label for="inputAddress" class="font-weight-bold float-right" id="lblAddress"></label>
                        </div>
                        <div class="d-flex">
                            <div class="flex-fill">
                                <div class="form-check">
                                    <label class="font-weight-bold" for="IsSump">
                                        <input type="checkbox" class="form-check-input" id="ckbIsSump" disabled>Is Sump
                                    </label>
                                </div>
                            </div>
                            <div class="flex-fill">
                                <div class="form-check">
                                    <label class="font-weight-bold" for="IsRent">
                                        <input type="checkbox" class="form-check-input" id="ckbIsRent" disabled>Is Rent
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


