@{
    Layout = null;
}
<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between mb-1">
        <h5 class="h2">Asset Registration</h5>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary">
                    <h3 class="mb-0 text-light">Primary</h3>
                </div>
                <div class="card-body">
                    <div autocomplete="off" class="form" role="form">
                        <div class="form-group">
                            <label for="inputAssetName">Asset Name</label>
                            <input class="form-control minWidthFull" id="txtAssetName" placeholder="Asset Name..." type="text">
                        </div>
                        <div class="form-group">
                            <label for="inputAssetName">Registration Date</label>
                            <input class="form-control minWidthFull" id="txtRegDate" placeholder="Registration Date..." type="text">
                        </div>
                        <div class="form-group">
                            <label for="inputTranAmt">Registered To</label>
                            <input class="form-control minWidthFull" id="txtRegTo" placeholder="Registered To..." type="text">
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary"><h3 class="mb-0 text-light">Secondary</h3></div>
                <div class="card-body card-body pb-4">
                    <div autocomplete="off" class="form" role="form">
                        <div class="form-group">
                            <label for="inputLandTax">Land Tax Amount</label>
                            <input class="form-control minWidthFull" id="txtRegTaxAmt" placeholder="Land Tax Amount..." type="text">
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfDoors">Number Of Doors</label>
                            <input class="form-control minWidthFull" id="txtNumDoors" placeholder="Number Of Doors..." type="number">
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfWindows">Number Of Windows</label>
                            <input class="form-control minWidthFull" id="txtNumWindows" placeholder="Number Of Windows..." type="number">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary"><h3 class="mb-0 text-light">Secondary</h3></div>
                <div class="card-body card-body pb-4">
                    <div autocomplete="off" class="form" role="form">

                        <div class="form-group">
                            <label for="inputNumberOfTaps">Number Of Taps</label>
                            <input class="form-control minWidthFull" id="txtNumTaps" placeholder="Number Of Taps..." type="number">
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfBulbs">Number Of Bulbs</label>
                            <input class="form-control minWidthFull" id="txtNumBulbs" placeholder="Number Of Bulbs..." type="number">
                        </div>
                        <div class="form-group">
                            <label for="inputNumberOfBulbs">Number Of Fans</label>
                            <input class="form-control minWidthFull" id="txtNumFans" placeholder="Number Of Fans..." type="number">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary">
                    <h3 class="mb-0 text-light">Tertiary</h3>
                </div>
                <div class="card-body">
                    <div autocomplete="off" class="form" role="form">
                        <div class="form-group">
                            <label for="inputAddress">Address</label>
                            <input class="form-control minWidthFull" id="txtAssetAddress" placeholder="Address..." type="text">
                        </div>
                        <div class="custom-control custom-checkbox form-group">
                            <input type="checkbox" id="ckbIsSump" class="custom-control-input">
                            <label class="custom-control-label"  for="IsSump">Is Sump</label>
                        </div>
                        <div class="custom-control custom-checkbox form-group">
                            <input type="checkbox" class="custom-control-input" id="ckbIsRent">
                            <label class="custom-control-label"  for="IsRent">Is Rent</label>
                        </div>
                        <div class="form-group">
                            <label for="inputRemarks">Remarks</label>
                            <textarea class="form-control minWidthFull" id="txtAssetRegRemarks" placeholder="Remarks..." rows="4"></textarea>
                        </div>

                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-info w-25" type="button">Back</button>
                        <button class="btn btn-danger w-25" type="submit">clear</button>
                        <button class="btn btn-info w-25" type="button" id="btnAssetRegistration">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
