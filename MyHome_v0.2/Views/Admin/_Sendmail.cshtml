@{
    Layout = null;
}
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-lg-4 offset-lg-4">
            <div class="card card-outline-secondary">
                <div class="card-header bg-primary">
                    <h3 class="mb-0 text-light">Send mail</h3>
                </div>
                <div class="card-body">
                    <div autocomplete="off" class="form" role="form">
                        <div class="form-group">
                            <label for="inputSendTo">Send To</label>
                            <input class="form-control minWidthFull" placeholder="Send To..." type="text">
                        </div>
                        <div class="form-group">
                            <label for="inputSubject">Subject</label>
                            <input class="form-control minWidthFull" placeholder="Subject..." type="text">
                        </div>
                        <div class="form-group">
                            <label for="inputBody">Body</label>
                            <textarea class="form-control minWidthFull" placeholder="Body..." rows="5"></textarea>
                        </div>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="myInput" aria-describedby="myInput">
                                <label class="custom-file-label" for="myInput">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <button class="btn btn-outline-info" type="button" id="myInput">Button</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <div class="form-group">
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-danger w-25" type="submit">clear</button>
                            <button class="btn btn-info w-25" type="submit">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>