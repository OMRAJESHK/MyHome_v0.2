@{
    Layout = null;
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header global-bg-primary">
            <div class="d-flex bd-highlight">
                <div class="display-6 p-2 flex-grow-1 text-center h4">WELCOME TO <span id="homeName">ADMIN DASHBOARD</span></div>
                <div title="425 Days"><label>since 1Year 2months</label></div>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex bd-highlight">
                <div class="p-2 flex-fill bd-highlight">Registered To: <span id="RegdName">Prakash</span></div>
                <div class="p-2 flex-fill bd-highlight text-right">Rented To: <span id="TenantName">Ramesh Kumar</span></div>
            </div>
            <div class="d-flex bd-highlight">
                <div class="p-2 flex-fill bd-highlight">Registered Date: <span id="RegdDate">20 Jan 2010</span></div>
                <div class="p-2 flex-fill bd-highlight text-right">Joining Date : <span id="joinDate">12 Mar 2012</span></div>
            </div>
        </div>
    </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header" style="background-color: #f44336;color:#fff">Year 2021 Rent Status</div>
                        <div class="card-body">
                            <div class="row" id="crdbdyRentCheck"></div>
                        </div>
                    </div>

                </div>
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header" style="background-color: #03a9f4;color: #fff">Year 2021 Water Bill Status</div>
                        <div class="card-body">
                            <div class="row" id="crdbdyElectricityCheck"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header" style="background-color: #f57801;color: #fff">Year 2021 Electricity Bill Status</div>
                        <div class="card-body" >
                            <div class="row" id="crdbdyWaterCheck"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="IncExpAccrdion">
                <!-- Last Year -->
                <div class="card mb-0">
                    <div class="card-header text-light" style="background-color: #7042ea;" id="headingOne">
                        <div class="d-flex">
                            <h5 class="text-light">
                                <select class="form-control" id="yearlyDdl" onchange="yearlyDdlChange()"></select>
                            </h5>
                            <h5 class="text-light mb-0">
                                <button class="btn text-light" data-toggle="collapse" data-target="#lastYearIncExp" aria-expanded="true" aria-controls="lastYearIncExp">
                                    Income and Expense
                                </button>
                            </h5>
                        </div>
                    </div>

                    <div id="lastYearIncExp" class="collapse show" aria-labelledby="headingOne" data-parent="#IncExpAccrdion">
                        <div class="card-body p-1">
                            <div class="row">
                                <div class="col col-md-6">
                                    <div class="card shadow-sm">
                                        <div class="d-flex justify-content-between card-header p-3" style="background-color: #46af55">
                                            <h5 class="text-light">Overall Income</h5>
                                            <h5 class="text-light" id="totalInc"></h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="doughnut">
                                                <div class="doughnutChartContainer"><canvas id="yearIncomeChart" height="230"></canvas></div>
                                                <div id="legend" class="chart-legend"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col col-md-6">
                                    <div class="card shadow-sm">
                                        <div class="d-flex justify-content-between card-header p-3" style="background-color: #f44336;">
                                            <h5 class="text-light">Overall Expenses</h5>
                                            <h5 class="text-light" id="totalExp"></h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="doughnut">
                                                <div class="doughnutChartContainer"><canvas id="yearExpenseChart" height="250"></canvas></div>
                                                <div id="legend" class="chart-legend"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Last Month -->
                <div class="card mb-0">
                    <div class="card-header" style="background-color: #1fa288;" id="headingTwo">
                        <div class="d-flex">
                            <h5 class="text-light">
                                <select class="form-control" style="width: 90px;">
                                    <option>Jan</option>
                                    <option>Feb</option>
                                    <option>Mar</option>
                                    <option>Apl</option>
                                    <option>May</option>
                                    <option>Jun</option>
                                </select>
                            </h5>
                            <h5 class="mb-0">
                                <button class="btn text-light" data-toggle="collapse" data-target="#lastMonthIncExp" aria-expanded="true" aria-controls="lastMonthIncExp">
                                    Income and Expense
                                </button>
                            </h5>
                        </div>
                    </div>

                    <div id="lastMonthIncExp" class="collapse" aria-labelledby="headingTwo" data-parent="#IncExpAccrdion">
                        <div class="card-body">
                            <div class="row">
                                <div class="col col-md-6">
                                    <div class="card shadow-sm">
                                        <div class="d-flex justify-content-between card-header p-3" style="background-color: #46af55">
                                            <h5 class="text-light">Last Month Income</h5>
                                            <h5 class="text-light" id="totalMonthlyInc">&#8377; 10,900</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="doughnut">
                                                <div class="doughnutChartContainer"><canvas id="monthIncomeChart" height="230"></canvas></div>
                                                <div id="legend" class="chart-legend"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col col-md-6">
                                    <div class="card shadow-sm">
                                        <div class="d-flex justify-content-between card-header p-3" style="background-color: #f44336;">
                                            <h5 class="text-light">Last Month Expenses</h5>
                                            <h5 class="text-light" id="totalMonthlyExp">&#8377; 4,900</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="doughnut">
                                                <div class="doughnutChartContainer"><canvas id="monthExpenseChart" height="250"></canvas></div>
                                                <div id="legend" class="chart-legend"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


