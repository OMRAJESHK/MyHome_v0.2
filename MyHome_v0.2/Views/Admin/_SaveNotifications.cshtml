@{
    Layout = null;
}
<form onsubmit="saveNotifcation();return false">
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-4 offset-lg-4">
                <div class="card card-outline-secondary">
                    <div class="card-header global-bg-primary">
                        <h3 class="mb-0 text-light">Add Notification</h3>
                    </div>
                    <div class="card-body">
                        <div autocomplete="off" class="form" role="form">
                            <div class="form-group">
                                <label for="inputName">Notification Type</label>
                                <select class="form-control minWidthFull" id="ddlNotifications" required></select>
                            </div>
                            <div class="form-group">
                                <label for="inputNotiDesc">Notification Description</label>
                                <textarea class="form-control minWidthFull" placeholder="Description..." rows="5" id="txtNotiDesc" required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer p-2">
                        <div class="form-group">
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-secondary w-25" type="button" onclick="getAllNotification()">Back</button>
                                <button class="btn btn-danger w-25" type="submit">clear</button>
                                <button class="btn btn-info w-25" type="submit">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
